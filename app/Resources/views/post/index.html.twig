{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Post list</h1>
    
	<ul>
            <a href="{{ path('post_new') }}" class="btn btn-success" role="button" >Create a new entry</a>
    </ul>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Publishtime</th>
                <th>Tag</th>
                <th>Content</th>
                <th>Note</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                <td>{{ post.title }}</td>
                <td>{% if post.publishtime %}{{ post.publishtime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ post.tag }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.note }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('post_show', { 'id': post.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('post_edit', { 'id': post.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
